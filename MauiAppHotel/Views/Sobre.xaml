<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             BackgroundColor="{StaticResource Secondary}">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
        <Label Text="Sobre"
               FontSize="Title"
               HorizontalOptions="Center"
               TextColor="{StaticResource Primary}" />

        <Label Text="Desenvolvedor: Arthur"
               FontSize="Body"
               TextColor="{StaticResource SecondaryDarkText}" />

        <Label Text="Ano de Desenvolvimento: 2024"
               FontSize="Body"
               TextColor="{StaticResource SecondaryDarkText}" />
    </VerticalStackLayout>
</ContentPage>
