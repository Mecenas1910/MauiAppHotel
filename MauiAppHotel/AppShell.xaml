<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    <Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MauiAppHotel.Views"
       x:Class="MauiAppHotel.AppShell"
       BackgroundColor="{StaticResource Secondary}"
       FlyoutBackgroundColor="{StaticResource Primary}"
       FlyoutBehavior="Flyout">

    <!-- Menu Lateral -->
    <FlyoutItem Title="Contratação" 
                Icon="icon_home.png" 
                Route="ContratacaoHospedagem">
        <ShellContent ContentTemplate="{DataTemplate local:ContratacaoHospedagem}" />
    </FlyoutItem>

    <FlyoutItem Title="Sobre" 
                Icon="icon_info.png" 
                Route="Sobre">
        <ShellContent ContentTemplate="{DataTemplate local:Sobre}" />
    </FlyoutItem>
</Shell>

</Shell>
